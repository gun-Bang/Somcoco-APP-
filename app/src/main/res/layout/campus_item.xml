<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/ripple_unbounded_rectangle">

    <RelativeLayout
        android:id="@+id/campus_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cps_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/cps_logo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="장안대학교"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <ImageView
            android:id="@+id/cps_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginVertical="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/campus_list_item"
        android:background="#CBCBCB"/>
</RelativeLayout>