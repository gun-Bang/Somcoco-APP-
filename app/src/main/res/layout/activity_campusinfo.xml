<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/campus_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/infoback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_unbounded_circle"
                android:clickable="true"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <LinearLayout
                android:id="@+id/cps_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="15dp"
                android:layout_toLeftOf="@+id/tour_start"
                android:layout_toRightOf="@+id/infoback">

                <ImageView
                    android:id="@+id/cps_info_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/cps_info_name"
                    android:background="@null"
                    android:src="@drawable/jangan" />

                <TextView
                    android:id="@+id/cps_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="장안대학교"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/tour_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ripple_unbounded_circle"
                android:clickable="true"
                app:srcCompat="@drawable/ic_near_me_black_24dp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cps_info_foreground"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="150dp" />

            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:layout_marginVertical="10dp"
                android:background="#E8E8E8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:id="@+id/map_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/outline_location_on_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/map_icon"
                    android:text="지도"
                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="150dp">

                <LinearLayout
                    android:id="@+id/map_campus"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:orientation="vertical" />

                <ImageView
                    android:id="@+id/fullscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ripple_unbounded_circle"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_fullscreen_black_24dp" />
            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:layout_marginVertical="10dp"
                android:background="#E8E8E8" />

            <TextView
                android:id="@+id/cps_info_introduction"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="장안대학교(長安大學交)는 대한민국 경기도 화성시에 있는 전문대학이다.수원시 장안구(長安區)나 팔달구 장안동(長安洞)에 있지 않으며,화성시에서도 장안면(長安面)이 아닌 봉담읍에 소재한다." />

            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:layout_marginVertical="10dp"
                android:background="#E8E8E8" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="웹사이트"/>

                    <TextView
                        android:id="@+id/cps_info_webaddr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="http://www.jangan.ac.kr"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="주소"/>

                    <TextView
                        android:id="@+id/cps_info_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경기도 화성시 봉담읍 삼천병마로 1182(상리 460)"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="개교일"/>

                    <TextView
                        android:id="@+id/cps_info_openingday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1979년"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="총장"/>

                    <TextView
                        android:id="@+id/cps_info_president"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김태일"/>
                </LinearLayout>

           </LinearLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="3dp"
                android:layout_marginVertical="10dp"
                android:background="#E8E8E8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/outline_location_city_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="건물별 시설"
                    android:textSize="15dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/campus_building_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>